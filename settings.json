{
  "autosave": {
    "after_delay": {
      "milliseconds": 1000,
    },
  },
  "base_keymap": "VSCode",
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_size": 13.0,
  "code_actions_on_format": {
    "source.fixAll.eslint": true,
  },
  "colorize_brackets": true,
  "ensure_final_newline_on_save": true,
  "file_types": {
    "dotenv": ["{.env,.env.*}"],
    "tailwindcss": ["*.css"],
  },
  "languages": {
    "PHP": {
      "formatter": {
        "external": {
          "arguments": ["-"],
          "command": "php-cs-fixer-stdin",
        },
      },
      "tab_size": 4,
    },
  },
  "linked_edits": true,
  "minimap": {
    "show": "always",
  },
  "preferred_line_length": 160,
  "project_panel": {
    "auto_fold_dirs": false,
  },
  "soft_wrap": "bounded",
  "tab_size": 2,
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "terminal": {
    "blinking": "on",
    "cursor_shape": "underline",
    "font_family": "JetBrains Mono",
    "font_size": 13.0,
    "max_scroll_history_lines": 10000,
  },
  "theme": {
    "dark": "One Dark",
    "light": "One Light",
    "mode": "system",
  },
  "ui_font_size": 16,
  "wsl_connections": [
    {
      "distro_name": "Ubuntu",
      "user": null,
      "projects": [],
    },
  ],
}
